<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="ru.orlovvv.ort.ui.OrtViewModel" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="32dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/nearby_menu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_nearby_menu_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                    android:src="@drawable/ic_list_24"
                    app:layout_constraintBottom_toBottomOf="@id/tv_nearby_menu_item"
                    app:layout_constraintEnd_toStartOf="@id/tv_nearby_menu_item"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_nearby_menu_item" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_nearby_menu_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/nearby"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_nearby_menu_item"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Nearby" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/saved_menu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nearby_menu_item">

                <ImageView
                    android:id="@+id/iv_saved_menu_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                    android:src="@drawable/ic_saved_24"
                    app:layout_constraintBottom_toBottomOf="@id/tv_saved_menu_item"
                    app:layout_constraintEnd_toStartOf="@id/tv_saved_menu_item"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_saved_menu_item" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_saved_menu_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/saved"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_saved_menu_item"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Saved" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/maps_menu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/saved_menu_item">

                <ImageView
                    android:id="@+id/iv_maps_menu_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                    android:src="@drawable/ic_location_24"
                    app:layout_constraintBottom_toBottomOf="@id/tv_maps_menu_item"
                    app:layout_constraintEnd_toStartOf="@id/tv_maps_menu_item"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_maps_menu_item" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_maps_menu_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/maps"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_maps_menu_item"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Maps" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</layout>