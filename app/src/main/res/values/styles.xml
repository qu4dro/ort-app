<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardViewStyle.ItemStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">0dp</item>
    </style>

    <style name="TextStyleBold" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="TextStyleRegular" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="TextStyleSemiBold" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

</resources>